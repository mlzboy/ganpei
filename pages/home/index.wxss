.memory_header
{
margin:0 0 40rpx 0;
display:flex;
flex-direction:row;
align-items:center;
}

.memory_icon {
border-radius: 15rpx;
width: 12rpx;
height: 30rpx; 
font-size: 30rpx;
text-align: center;
line-height: 30rpx;
  background: #00c355;


}
.memory_title
{

margin-left: 24rpx;
font-size: 36rpx;
line-height: 36rpx;
height:36rpx;
font-weight: normal;
word-break: break-all;
}



.memory_content
{
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}
.clear
{
clear:both;
height:0;
}






.block_test
{
  display:inline-block;
}
.text_test
{
  text-align:center;
  color:gray;
  font-size: 24rpx;
  margin:5rpx 0;
}

.sv
{
   width: 100%;
    overflow: hidden;
    white-space: nowrap;
    height: 320rpx;
}
.sv2 
{
   width: 100%;
    overflow: hidden;
    white-space: nowrap;
